function print_r2($val){
        echo '<pre>';
        print_r($val);
        echo  '</pre>';
}

function print_r2_val($val){
        $mes = '<pre>';
        $mes .= print_r($val, true);
        $mes .= '</pre>';
	return $mes;
}

